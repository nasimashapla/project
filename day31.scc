*{
    margin: 0;
    box-sizing: border-box;
    padding: 0;
}
.headersection {
    background-color: antiquewhite;
    height: 100%;
    width: 100%;
    padding: 5px;
    display: flex;
    justify-content: center;
    margin: 0;
    font-size: 22px;
    color: blue;
}
.textsection {
    background-color: beige;
    height: 100%;
    width: 100%;
    display: flex;
    font-size: 30px;
}
.loginsection {
    height: 100%;
    width: 100%;
    background-color: azure;
    margin: 10px;
}
.loginsection2 {
    height: 100%;
