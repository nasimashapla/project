.emailsection {
    height: 50px;
    width: 400px;
    border: 1px solid gray;
    border-radius: 10px;
    margin: 2px;
    padding: 5px;
    display: flex;
    text-align: center;
    cursor: pointer;
}
.loginsection3 .emailsection {
    display: flex;
    justify-content: space-between;
    align-items: center;
    
}
.btn {
    height: 50px;
